{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@types": [
        "src/types/index.ts"
      ]
    }
  }
}